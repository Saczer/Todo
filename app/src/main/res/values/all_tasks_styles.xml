<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AllTasks" />

    <style name="AllTasks.Appbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/all_tasks_toolbar_elevation</item>
    </style>

    <style name="AllTasks.Toolbar">
        <item name="titleTextColor">?android:attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/AllTasks.Toolbar.Title</item>
    </style>

    <style name="AllTasks.Toolbar.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>